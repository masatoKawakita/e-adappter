<div class='categoryEdit-form__inputArea categoryEdit-form-inputArea' id="inputArea">
  <%= f.hidden_field :id %>
  <%= f.text_field :label,
    class: 'categoryEdit-form-inputArea__label',
    value: f.object.label == '未設定' ? '' : f.object.label,
    placeholder: f.object.label == '未設定' ? 'カテゴリー名' : '' %>
  <%= f.number_field :data,
    class: 'categoryEdit-form-inputArea__data' %><span>%</span>
  <% unless index == 0 %>
    <%= link_to_remove_association f,
      class: "categoryEdit-form-inputArea__deleteFormBtn",
      wrapper_class: 'categoryEdit-form__inputArea' do %>
      <i class="fas fa-eraser"></i>
    <% end %>
  <% end %>
</div>
